<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_bottom"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70"
    android:background="@color/black_transparent">

    <com.mobile.lapdv.mymusic.widget.SquareImageView
        android:id="@+id/image_mini_track"
        android:layout_width="@dimen/layout_height_65dp"
        android:layout_height="match_parent"
        android:background="@drawable/ic_app"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_tilte_track"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:paddingLeft="@dimen/dimen_small"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@color/color_white"
        app:layout_constraintBottom_toTopOf="@id/text_track_user"
        app:layout_constraintEnd_toStartOf="@+id/visualizer"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/image_mini_track"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/text_track_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="@dimen/dimen_small"
        android:singleLine="true"
        android:textColor="@color/color_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/image_mini_track"
        app:layout_constraintRight_toLeftOf="@+id/image_previous"
        app:layout_constraintTop_toBottomOf="@+id/text_tilte_track" />

    <com.mobile.lapdv.mymusic.widget.MusicVisualizer
        android:id="@+id/visualizer"
        android:layout_width="30dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toStartOf="@+id/image_previous"
        app:layout_constraintStart_toEndOf="@+id/text_tilte_track" />

    <ImageView
        android:id="@+id/image_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image_play_pause"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_previous" />

    <ImageView
        android:id="@+id/image_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image_action_next"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_pause" />

    <ImageView
        android:id="@+id/image_action_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_next" />
</android.support.constraint.ConstraintLayout>
