<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_genres_width"
    android:layout_marginBottom="@dimen/dimen_large"
    android:layout_marginLeft="@dimen/element_spacing_x1.25"
    android:layout_marginRight="@dimen/element_spacing_x1.25"
    android:background="@drawable/bg_item_genre"
    android:elevation="@dimen/item_radius_genre"
    android:paddingLeft="@dimen/dimen_large">

    <TextView
        android:id="@+id/text_genres"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_small"
        android:textAllCaps="true"
        android:textColor="@color/color_md_amber_900"
        android:textSize="@dimen/default_tba_title_text_size"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_more"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dimen_large"
        android:paddingTop="@dimen/dimen_small"
        app:layout_constraintBottom_toBottomOf="@+id/text_genres"
        app:layout_constraintLeft_toRightOf="@id/text_genres"
        app:layout_constraintTop_toTopOf="@+id/text_genres"
        app:srcCompat="@drawable/ic_chevron_right" />

    <com.mobile.lapdv.mymusic.widget.CustomTrackRecyclerView
        android:id="@+id/recyclerview_track"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_genres" />

</android.support.constraint.ConstraintLayout>
