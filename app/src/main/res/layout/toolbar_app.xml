<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_height_65dp"
    android:background="@color/colorPrimary"
    android:minHeight="?attr/actionBarSize">

    <TextView
        android:id="@+id/text_tool_bar_left"
        style="@style/StyleTextViewToolBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_tool_bar_right"
        style="@style/StyleTextViewToolBar"
        android:padding="@dimen/dimen_large"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_toolbar_left"
        style="@style/StyleTextViewToolBar"
        android:padding="@dimen/dimen_large"
        app:srcCompat="@drawable/ic_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/text_size_xlarge"
        android:textColor="@color/color_white"
        app:layout_constraintBottom_toBottomOf="@id/image_toolbar_left"
        app:layout_constraintEnd_toStartOf="@id/image_toolbar_right"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_toolbar_right"
        style="@style/StyleTextViewToolBar"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dimen_large"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
