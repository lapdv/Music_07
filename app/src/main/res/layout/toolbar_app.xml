<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_height_65dp"
    android:minHeight="?attr/actionBarSize">

    <TextView
        android:id="@+id/tv_tool_bar_center"
        style="@style/StyleTextViewToolBar"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/tv_tool_bar_right"
        style="@style/StyleTextViewToolBar"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dimen_large"
        app:layout_constraintLeft_toRightOf="parent" />

    <ImageView
        android:id="@+id/iv_toolbar_left"
        style="@style/StyleTextViewToolBar"
        android:layout_alignParentLeft="true"
        android:padding="@dimen/dimen_large"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="?attr/actionBarSize"
        android:layout_marginRight="?attr/actionBarSize"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_toolbar_right"
        style="@style/StyleTextViewToolBar"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dimen_large"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
