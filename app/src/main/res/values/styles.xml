<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- custom text view toolbar-->
    <style name="StyleTextViewToolBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/layout_height_65dp</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--navigation-->
    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--tablayout-->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <!-- style Loading app -->
    <style name="TintedProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint" tools:ignore="NewApi">@color/color_md_amber_900
        </item>
        <item name="android:indeterminateTintMode" tools:ignore="NewApi">src_in</item>
    </style>

</resources>
